{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "gen:migrations": "node scripts/generate-migrations-from-models.mjs",
    "test": "cross-env NODE_ENV=test vitest run --passWithNoTests",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down -v",
    "test:db:logs": "docker compose -f docker-compose.test.yml logs -f",
    "test:unit": "cross-env NODE_ENV=test TEST_SUITE=unit vitest run tests/unit --passWithNoTests",
    "test:component": "cross-env NODE_ENV=test TEST_SUITE=component vitest run tests/component --passWithNoTests",
    "test:integration": "cross-env NODE_ENV=test TEST_SUITE=integration vitest run tests/integration --passWithNoTests --testTimeout=45000 --no-file-parallelism --maxWorkers=1 --maxConcurrency=1",
    "test:api": "cross-env NODE_ENV=test TEST_SUITE=api vitest run tests/api --passWithNoTests --testTimeout=45000 --no-file-parallelism --maxWorkers=1 --maxConcurrency=1",
    "test:db:smoke": "cross-env NODE_ENV=test node tests/helpers/run-db-smoke.js",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage --passWithNoTests",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "test:security": "cross-env NODE_ENV=test node --test test/error-envelope.test.js",
    "test:validation": "cross-env NODE_ENV=test node --test test/request-validation.test.js",
    "test:api-contract": "cross-env NODE_ENV=test node --test test/api-versioning-success-contract.test.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:rollback": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "start:release": "npm run db:migrate && npm run start",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "worker": "cross-env NODE_ENV=development nodemon src/worker.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@aws-sdk/client-sts": "^3.985.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "csv-parser": "^3.2.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "fs": "^0.0.1-security",
    "googleapis": "^169.0.0",
    "groq-sdk": "^0.37.0",
    "jsonwebtoken": "^9.0.3",
    "luxon": "^3.7.2",
    "mailgun.js": "^12.4.0",
    "mongoose": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "path": "^0.12.7",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint-plugin-vitest": "^0.5.4",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  }
}
